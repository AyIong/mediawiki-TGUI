{{!
	See @typedef MenuDefinition
}}

<div id="{{id}}" class="tgui-menu{{#class}} {{.}}{{/class}}" {{{html-tooltip}}} {{{html-user-language-attributes}}}>
	{{!
		Dropdown menus use the checkbox hack and require `input` and `label` elements.
		`aria-label` is applied to the `input` which is semantically a button.
		The `label` element is used as a visual button.
	}}
	{{#is-dropdown}}
	<input type="checkbox"
		id="{{id}}-checkbox"
		role="button"
		aria-haspopup="true"
		data-event-name="ui.dropdown-{{id}}"
		class="tgui-menu-checkbox{{#checkbox-class}} {{.}}{{/checkbox-class}}"
		{{#aria-label}}aria-label="{{.}}"{{/aria-label}}
		{{{html-tgui-menu-checkbox-attributes}}}
	/>
	<label
		id="{{id}}-label"
		for="{{id}}-checkbox"
		class="tgui-menu-heading{{#heading-class}} {{.}}{{/heading-class}}"
		{{{html-tgui-menu-heading-attributes}}}
	>
		{{{html-tgui-heading-icon}}}<span class="tgui-menu-heading-label">{{label}}</span>
	</label>
	{{/is-dropdown}}
	{{!
		Portal menus also require a label
	}}
	{{#is-portal}}
	<div
		id="{{id}}-label"
		class="tgui-menu-heading{{#heading-class}} {{.}}{{/heading-class}}"
		{{#aria-label}}aria-label="{{.}}"{{/aria-label}}
	>
		{{{html-tgui-heading-icon}}}<span class="tgui-menu-heading-label">{{label}}</span>
	</div>
	{{/is-portal}}
	<div class="tgui-menu-content">
		{{{html-before-portal}}}
		<ul class="tgui-menu-content-list">{{{html-items}}}</ul>
		{{{html-after-portal}}}
	</div>
</div>
